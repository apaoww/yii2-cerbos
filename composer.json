{
    "name": "apaoww/yii2-cerbos",
    "description": "Yii2 extension for Cerbos access control with HTTP API integration",
    "type": "yii2-extension",
    "keywords": [
        "yii2",
        "extension",
        "cerbos",
        "access-control",
        "authorization",
        "rbac",
        "security"
    ],
    "license": "MIT",
    "authors": [
        {
            "name": "apaoww",
            "email": "apa.oww@gmail.com"
        }
    ],
    "require": {
        "php": ">=8.0",
        "yiisoft/yii2": "~2.0.14",
        "guzzlehttp/guzzle": "^7.0"
    },
    "require-dev": {
        "phpunit/phpunit": "^9.0"
    },
    "autoload": {
        "psr-4": {
            "apaoww\\cerbos\\": "src/"
        }
    },
    "extra": {
        "yii2-extension": {
            "name": "yii2-cerbos",
            "version": "1.0.0"
        }
    },
    "minimum-stability": "stable"
}